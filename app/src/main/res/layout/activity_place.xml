
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:id="@+id/relativeL1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/place2sample"
                android:scaleType="centerCrop"
                android:id="@+id/imageView"/>

            <TextView
                android:id="@+id/textViewPlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="PLACE NAME"
                android:textSize="21sp"
                android:layout_margin="16dp"
                android:textStyle="bold"
                android:textColor="#fff"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient">
            <RelativeLayout
                android:id="@+id/relativeL2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:layout_marginTop="6dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="130dp"
                    android:layout_height="36dp"
                    app:cardBackgroundColor="#43dcc8"
                    app:cardCornerRadius="16dp"
                    android:layout_marginLeft="-14dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tourism"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewTouristPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card1"
                    android:layout_marginTop="8dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeL3"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:layout_marginTop="6dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="130dp"
                    android:layout_height="36dp"
                    app:cardBackgroundColor="#43dcc8"
                    app:cardCornerRadius="16dp"
                    android:layout_marginLeft="-14dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hotels"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewHotels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card2"
                    android:layout_marginTop="8dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeL4"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:layout_marginTop="6dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="130dp"
                    android:layout_height="36dp"
                    app:cardBackgroundColor="#43dcc8"
                    app:cardCornerRadius="16dp"
                    android:layout_marginLeft="-14dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Restaurants"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewRestaurants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card3"
                    android:layout_marginTop="8dp"
                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
